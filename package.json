{
  "name": "block-comment",
  "version": "1.0.2",
  "description": "Create a multi-line block comment from a string or an array",
  "main": "block-comment-cjs.js",
  "bin": "cli.js",
  "files": [
    "cli.js",
    "block-comment-cjs.js"
  ],
  "scripts": {
    "pretest": "jscs *.js && eslint *.js",
    "test": "tape test-*.js | tap-spec",
    "coverage": "istanbul cover test-api.js",
    "coveralls": "${npm_package_scripts_coverage} && istanbul-coveralls"
  },
  "author": {
    "name": "Shinnosuke Watanabe",
    "email": "snnskwtnb@gmail.com",
    "url": "https://github.com/shinnn"
  },
  "repository": "shinnn/block-comment.js",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/shinnn/block-comment.js/blob/master/LICENSE"
    }
  ],
  "keywords": [
    "string",
    "comment",
    "block",
    "multline",
    "browser",
    "client-side"
  ],
  "dependencies": {
    "chalk": "^1.0.0",
    "get-stdin": "^4.0.1",
    "minimist": "^1.1.0",
    "sum-up": "^1.0.1"
  },
  "devDependencies": {
    "eslint": "^0.15.0",
    "istanbul": "^0.3.6",
    "istanbul-coveralls": "^1.0.1",
    "jscs": "^1.11.3",
    "tap-spec": "^2.2.1",
    "tape": "^3.5.0"
  },
  "jscsConfig": {
    "preset": "google",
    "maximumLineLength": 98,
    "validateLineBreaks": "LF"
  }
}
